---
import { getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { format, formatISO } from 'date-fns';
interface Props {
  post:  CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const entry = await getEntry('blog', post.slug);
const { Content } = await entry.render();

---

<article class="space-y-4 max-w-md mx-auto">
  <header>
    <h1 class="md:text-4xl lg:text-5xl font-bold leading-tight hover:underline no-underline">
      <a class="hover:text-indigo-200 dark:hover:text-indigo-200" href={post.slug}>
        {post.data.title}
      </a>
    </h1>
    <h3 class="text-base text-indigo-500">
      <time datetime={formatISO(post.data.pubDate, {representation: 'date' })}>{format(post.data.pubDate, 'd MMMM, yyyy')}</time>
    </h3>
  </header>

  <section class="prose prose-indigo md:prose-lg lg:prose-xl dark:prose-invert hover:prose-a:text-indigo-50">
    <Content />
  </section>
</article>
